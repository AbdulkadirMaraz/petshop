@model AdminPetshop.Models.RegisterViewModel
@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- Banner -->


<div class="sisf-page-section section">
    <div class="sisf-grid sisf-layout--template">
        <div class="sisf-grid-inner container">
            <div class="sisf-myaccount-sec">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-8">
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-white d-flex align-items-center justify-content-between">
                                <h5 class="mb-0">Profil Bilgileri</h5>
                                <span class="text-muted small">Bilgilerinizi güncelleyebilirsiniz</span>
                            </div>

                            <div class="card-body">

                                @if (ViewBag.Success != null)
                                {
                                    <div class="alert alert-success mb-4">
                                        @ViewBag.Success
                                    </div>
                                }

                                <form class="billing-form" asp-action="Index" asp-controller="Admin" method="post">
                                    @Html.AntiForgeryToken()

                                    <div class="row g-3">
                                        <!-- Kullanıcı Adı -->
                                        <div class="col-12">
                                            <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fa-regular fa-user"></i></span>
                                                <input asp-for="UserName" class="form-control" />
                                            </div>
                                            <span asp-validation-for="UserName" class="text-danger small"></span>
                                        </div>

                                        <!-- Email -->
                                        <div class="col-12">
                                            <label asp-for="Mail" class="form-label">Email Adresi</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fa-regular fa-envelope"></i></span>
                                                <input asp-for="Mail" type="email" class="form-control" />
                                            </div>
                                            <span asp-validation-for="Mail" class="text-danger small"></span>
                                        </div>

                                        <!-- Adres -->
                                        <div class="col-12">
                                            <label asp-for="Address" class="form-label">Adres</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fa-solid fa-location-dot"></i></span>
                                                <input asp-for="Address" class="form-control" />
                                            </div>
                                            <span asp-validation-for="Address" class="text-danger small"></span>
                                        </div>

                                        <!-- Telefon -->
                                        <div class="col-12">
                                            <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="fa-solid fa-phone"></i></span>
                                                <input asp-for="PhoneNumber" type="tel" class="form-control" />
                                            </div>
                                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                        </div>
                                    </div>

                                    <hr class="my-4" />

                                    <!-- Şifre Değiştir (Opsiyonel) -->
                                    <div class="d-flex align-items-center justify-content-between mb-2">
                                        <h6 class="mb-0">Şifre Değiştir (Opsiyonel)</h6>
                                        <button class="btn btn-outline-secondary btn-sm"
                                                type="button"
                                                data-bs-toggle="collapse"
                                                data-bs-target="#pwdCollapse"
                                                aria-expanded="false"
                                                aria-controls="pwdCollapse">
                                            Göster/Gizle
                                        </button>
                                    </div>

                                    <div class="collapse" id="pwdCollapse">
                                        <div class="row g-3">
                                            <div class="col-12 col-md-6">
                                                <label asp-for="Password" class="form-label">Yeni Şifre</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                                                    <input asp-for="Password" type="password" class="form-control" />
                                                </div>
                                                <span asp-validation-for="Password" class="text-danger small"></span>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <label asp-for="PasswordConfirm" class="form-label">Yeni Şifre Tekrar</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                                                    <input asp-for="PasswordConfirm" type="password" class="form-control" />
                                                </div>
                                                <span asp-validation-for="PasswordConfirm" class="text-danger small"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Genel hata özeti -->
                                    <div class="mt-3">
                                        <div asp-validation-summary="All" class="alert alert-danger py-2 small" style="display:@(ViewData.ModelState.ErrorCount>0 ? "block":"none")"></div>
                                    </div>

                                    <!-- Kaydet -->
                                    <div class="d-grid d-sm-flex justify-content-end mt-4">
                                        <button type="submit" class="btn btn-primary px-4">
                                            <i class="fa-regular fa-floppy-disk me-2"></i>Güncelle
                                        </button>
                                    </div>
                                </form>

                            </div> <!-- card-body -->
                        </div> <!-- card -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

