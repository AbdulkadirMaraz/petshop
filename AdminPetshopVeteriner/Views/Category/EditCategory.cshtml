@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kategori Düzenle</h1>

<form method="post">
    <div class="form-group">
        @Html.HiddenFor(x => x.Id)
        <span asp-validation-for="Name" class="text-danger"></span>
        @Html.Label("Kategori Adı")
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryImageUrl"></label>
        <input asp-for="CategoryImageUrl" class="form-control" />
        <span asp-validation-for="CategoryImageUrl" class="text-danger"></span>
    </div>


    <button class="btn btn-outline-info">Kategori Güncelle</button>
</form>
