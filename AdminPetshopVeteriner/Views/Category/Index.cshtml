@using EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Listesi</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                         
                            <th>Kategori Adı</th>
                            <th>Kategori Resim</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td><img src="@item.CategoryImageUrl" alt="resim" style="width:70px;" /></td>
                                <td><a href="/Category/DeleteCategory/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Category/EditCategory/@item.Id" class="btn btn-outline-success">Düzenle</a></td>
                            </tr>
                        }


                    </tbody>
                </table>
                <a href="/Category/AddCategory/" class="btn btn-outline-info">Yeni Kategori Girişi</a>
            </div>
        </div>
    </div>
</div>

