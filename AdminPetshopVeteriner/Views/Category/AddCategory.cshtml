@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Yeni Kategori Girişi</h1>

<form asp-action="AddCategory" method="post">
    <div class="form-group">
        <span asp-validation-for="Name" class="text-danger"></span>
        @Html.Label("Yeni Kategori")
       
        <input type="text" name="Name" class="form-control" />
        
    </div>
    <div class="form-group">
        <label asp-for="CategoryImageUrl"></label>
        <input asp-for="CategoryImageUrl" class="form-control" />
        <span asp-validation-for="CategoryImageUrl" class="text-danger"></span>
    </div>

    <button class="btn btn-outline-info">Yeni Kategori Gir</button>
</form>
